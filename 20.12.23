//Factorial with recursive function 

#include <stdio.h>
int fact(int c)
{
    if(c<=1)
    {
        return c;
    }
    else
    {
         return c*fact(c-1);
    }

}
void main() {
    int c;
    printf("Enter a number to find its factorial : ");
    scanf("%d",&c);
    printf("%d",fact(c));
}

