//Factorial without recursive function 


#include <stdio.h>

int main()
{
    int number,l=1;
    printf("Enter a number to find its factorial : ");
    scanf("%d",& number);
    for(int i=1;i<=number;i++)
    {
        l=l*i;
    }
    printf("%d\n",l);
}

